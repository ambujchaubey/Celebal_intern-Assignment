#Create lower triangular, upper triangular and pyramid containing the "*" character.

n = int(input("Enter the number of rows: "))

#Lower Triangular
print("\nLower Triangular:")
for i in range(1,n+1):
    print('*' *i)

#Upper Triangular
print("\nUpper Triangular:")
for i in range(1,n+1):
    spaces = ' ' * (n-i)
    stars = '*' *i
    print(spaces+stars)

#Pyramid
print("\nPyramid:")
for i in range(n):
    spaces = ' ' * (n-i-1)
    stars = '*' * (2 *i + 1)
    print(spaces+stars)
